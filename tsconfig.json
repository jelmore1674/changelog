{
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/parser/*": ["./parser/*"],
      "@/write/*": ["./write/*"],
      "@/regex": ["./regex/index.ts"],
      "@/types": ["./types/index.ts"]
    }
  }
}
